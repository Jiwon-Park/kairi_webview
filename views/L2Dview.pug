doctype html
html(lang="ja")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script(src="https://unpkg.com/json5@2/dist/index.min.js")
        script(src="../js/live2d.min.js") 
        link(rel="stylesheet", href="../css/l2dview.css")
        title Live2DViewer
    body 
        canvas(id="live2d" width="1200" height="1200")
        input(type="hidden", id="card_id", value= card_id)
        div
            label(for="slider") Zoom
            input(type="range", value="1", min="0.1", max="5", step="0.01", id="scale_slider", name="slider", aria-label="Zoom", orient="vertical")
            button(type="reset") Reset
        script(src="../js/l2dcontrol.js")
            